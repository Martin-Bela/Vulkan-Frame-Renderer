# To learn more about .editorconfig see https://aka.ms/editorconfigdocs
root = true

# All files
[*]
insert_final_newline = true

# C++ files
[*.{c++,cc,cpp,cxx,h,h++,hh,hpp,hxx,inl,ipp,tlh,tli}]
indent_style = space
indent_size = 8
insert_final_newline = true
cpp_indent_namespace_contents = false

cpp_new_line_before_else = false

# Xml files
[*.xml]
indent_size = 2
